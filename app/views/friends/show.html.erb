<div class="card shadow" style="width: 50rem;">
  <div class="card-body">
    <p class="card-text display-4">
        <%= @friend.first_name + " " + @friend.last_name %> 
    </p>

    <p class="card-text"><%= @friend.email + " | " + @friend.phone%></p>
  </div>
</div>

<div>
  <%= link_to "Edit", edit_friend_path(@friend) , class:"btn btn-secondary mt-3" %> 
  <%= link_to "Back", friends_path, class:"btn btn-dark mt-3"%>

  <%= button_to "Destroy", @friend, method: :delete, class:"btn btn-danger mt-3" %>
</div>
